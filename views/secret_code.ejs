<%- include('layout') %>

    <h2>Join the Club</h2>

    <% if (error) { %>
        <p style="color: red;">
            <%= error %>
        </p>
        <% } %>

            <form action="/auth/join" method="POST">
                <label>Enter the secret passcode:</label>
                <input type="text" name="code" required />
                <button type="submit">Join</button>
            </form>