<%- include('layout') %>

    <h2>Sign Up</h2>

    <% if (errors.length> 0) { %>
        <ul style="color: red;">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/auth/signup" method="POST">
                <label>First Name:</label>
                <input type="text" name="firstName" value="<%= formData.firstName || '' %>" required><br>

                <label>Last Name:</label>
                <input type="text" name="lastName" value="<%= formData.lastName || '' %>" required><br>

                <label>Email:</label>
                <input type="email" name="email" value="<%= formData.email || '' %>" required><br>

                <label>Password:</label>
                <input type="password" name="password" required><br>

                <label>Confirm Password:</label>
                <input type="password" name="confirmPassword" required><br>

                <button type="submit">Sign Up</button>
            </form>